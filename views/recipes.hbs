<link rel="stylesheet" href="/stylesheets/style_recipes.css"/>

<h1>Voici les meilleures propositions pour toi!</h1>

{{#each myRecipes}}



<article>
  <img src="{{this.image}}" alt="image"/>
    
    <a>
      <h3>{{name}}</h3> <br>
         {{description}} </a>
</article>
    
  <div class="timebutton"> 

    <div class="critere">
        <p> <strong>Temps de Preparation:</strong> <time>{{time}}</time></p>
        <p> <strong>Difficulté:</strong> {{difficulty}}</p>
        <p> <strong>Mood:</strong> 
         {{#each mood}}
          {{this}}
         {{/each}}
         </p>

    </div>
    
    <form action="recipe_id" method="get">
      <button >Découvrir la recette...</button>

  </div> 

{{/each}}

